<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<p><%= @post.body %></p>
<hr />
<div><span>Leave a comment!</span></div>
<%= render 'comments/form' %>

<div id="comments">
  <%= render "comments/list", post: @post %>
</div>
